FROM botfactory/docker-for-terremotibot:8.10.0

LABEL mantainer="Matteo Contrini <m.contrini@gmail.com>"

# Move to /src
WORKDIR /src

# Install dependencies
COPY package.json yarn.lock ./
RUN yarn install

# Copy the app files
COPY . .

# Expose ports to host
EXPOSE 5000

# Start
CMD ["yarn", "run", "dev"]
